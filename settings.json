{
    "address": "0.0.0.0",  // Escuchar en todas las interfaces de red
    "port": 5040,  // Puerto donde FileBrowser escuchará
    "database": "/database.db",  // Ruta al archivo de base de datos
    "log": "/var/log/filebrowser.log",  // Ruta al archivo de log
    "baseURL": "",  // URL base para acceder al servicio a través de Nginx
    "auth": {
      "method": "basic",  // Método de autenticación (básica en este caso)
      "credentials": {
        "admin": "admin"  // Ajusta con tus credenciales
      }
    },
    "scope": "/srv",  // Ruta principal de archivos a mostrar en FileBrowser
    "root": "/srv",   // Ajusta según la ubicación de tus archivos
    "theme": "default",  // Tema para la interfaz de usuario
    "disableCreation": false,  // Permite la creación de archivos y carpetas
    "allowCommands": true,  // Permite ejecutar comandos
    "branding": {
      "brandName": "FileBrowser",  // Nombre de la aplicación en la interfaz
      "footer": "Powered by FileBrowser"  // Pie de página personalizado
    }
  }
  